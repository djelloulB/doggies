<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Dog Corner
			{% endblock %}
		</title>
		<link href="{{ asset('style/base.css') }}" rel="stylesheet">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

		<link href="{{ asset('style/style.css') }}" rel="stylesheet">
		<link rel="icon" href="{{ asset('img/paw.ico') }}"/>

		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
		<script src="https://kit.fontawesome.com/35ec662076.js" crossorigin="anonymous" defer></script>
		<script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous" defer></script>


		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}
	</head>
	<body>
		{% block header %}
			<header>

				{% block nav %}
					<nav id="navbar" class="navbar px-5 navbar-expand-lg navbar-dark">

						<div class="collapse navbar-collapse justify-content-between" id="navbarNavAltMarkup">
							<a id="logo" class="navbar-brand" href="/">
								<i class="fas fa-paw"></i>
								Dog Corner</a>
							<div class="navbar-nav">
								<a class="nav-link" aria-current="page" href="{{path('home_index')}}">Accueil</a>
								<a class="nav-link" href="{{path('list')}}">Tous les Chiens</a>
								<a class="nav-link" href="{{path('contact')}}">Contact</a>
								{% if is_granted('ROLE_ANNONCEUR') %}
									<a href="annonceur" class="nav-link" aria-current="page">Mes annonces

									</a>
									<div class="mx-5 start-end">
										<a href="annonce-formulaire" class=" btn add-btn " aria-current="page">Créer une annonce
											<i class="fas fa-plus"></i>
										</a>
									</div>
								{% endif %}


							</div>
							<div class="navbar-nav">
								<div class="align-top d-flex">

									<div class="text-center">
										{% if not app.user %}
											<a href="{{path('app_login')}}" class="p-0 mx-2 nav-link">
												<i class="fas fa-user"></i><br><span class="link-span">S 'identifier</span>
											</a>
										{% else %}
											<a href="{{path('app_logout')}}" class="p-0 nav-link">
												<i class="fas fa-sign-out-alt"></i>
												<br>Se déconnecteur
											</a>
										{% endif %}
									</div>
								</div>
							</div>
						</div>
					</nav>
					<h1 class="text-center my-5">
						<i class="fas fa-paw"></i>
						Dog Corner</h1>

				{% endblock %}
			</header>
		{% endblock %}

		{% block body %}{% endblock %}
	</body>
</html>
